{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card">
            <div class="row">
                <div class="text-center">
                    <span class="numbers btn btn-info btn-simple">Dashboard</span>
                </div>
            </div>
            <div class="card-content" id="powerbi_dashboard_container">

                {%  if account.dashboardurl is empty %}
                    {{ dashboard_powerbiUrl |raw }}
                {%  else %}
                    {{ account.dashboardurl| iframecontent |raw }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock body %}