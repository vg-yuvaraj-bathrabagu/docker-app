<div class="modal-dialog">
    <div class="modal-content">
        <form id="createConversion">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"><span class="create">Create</span> Conversion</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="card-content Conversion-form">
                    <div class="form-group">
                        <label class="control-label">Name
                            <star>*</star>
                        </label>
                        <input class="form-control"
                               name="name"
                               id="name"
                               value="{{ conversion.name }}"
                               type="text"
                               data-rule-required="true"
                               data-msg-required="Please enter the conversion name"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description
                        </label>
                        <textarea class="form-control" name="description" id="description">{{ conversion.description }}</textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Type <star>*</star></label>
                        <select id="type" name="type" class="form-control" data-rule-required="true" data-msg-required="Please enter the type of conversion">
                            <option value="">----</option>
                            <option value="Function">Function</option>
                            <option value="Webservice">Webservice</option>
                            <option value="Shell">Shell</option>
                        </select>
                        <input type="hidden" id="type_val" value="{{ conversion.type }}"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">URL
                            <star>*</star>
                        </label>
                        <textarea class="form-control" name="url" id="url" data-rule-required="true" data-msg-required="Please enter the type of conversion">{{ conversion.url }}</textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Parameters
                        </label>
                        <textarea class="form-control" name="parameters" id="parameters">{{ conversion.parameters }}</textarea>
                    </div>
                    <div class="category">
                        <star>*</star>
                        Required fields
                    </div>
                </div>
                <div class="card-footer">
                    <div class="clearfix"></div>
                </div>
                <input type="hidden" name="id" value="{{ conversion.id }}"/>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary cls" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary create">Create</button>
            </div>
        </form>
    </div>
</div>