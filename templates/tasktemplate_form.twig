<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <form id="createTaskTemplate" method="post">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"><span class="create">Create</span> Task Template</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group col-md-8">
                    <label class="control-label">Name
                        <star>*</star>
                    </label>
                    <input value="{{ tasktemplate.name }}" class="form-control" type="text" name="name" data-rule-required="true" data-msg-required="Please enter the name" />
                </div>
                <div class="form-group col-md-8">
                    <label class="control-label">Code
                        <star>*</star>
                    </label>
                    <input value="{{ tasktemplate.code }}" class="form-control" type="text" name="code" maxlength="20" data-rule-required="true" data-msg-required="Please enter the code" />
                </div>
                <div class="form-group col-md-8">
                    <label class="control-label">Notes
                    </label>
                    <textarea class="form-control">{{ tasktemplate.notes }}</textarea>
                </div>
                <div class="category col-md-6">
                    <star>*</star>
                    Required fields
                </div>
                <div>
                <table class="table no-datatable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Task name</th>
                            <th>Dependency</th>
                            <th>Duration</th>
                            <th>Description</th>
                            <th>Assignee</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for i in 1..5 %}
                            <tr>
                                <td>Step {{ i }}</td>
                                <td>
                                    <input value="" class="form-control" type="text" name="taskname[]" />
                                </td>
                                <td>
                                    <select>
                                        <option value="">None</option>
                                        <option value="1">Step 1</option>
                                        <option value="2">Step 2</option>
                                        <option value="3">Step 3</option>
                                        <option value="4">Step 4</option>
                                        <option value="5">Step 5</option>
                                        <option value="6">Step 6</option>
                                        <option value="7">Step 7</option>
                                        <option value="8">Step 8</option>
                                        <option value="9">Step 9</option>
                                        <option value="10">Step 10</option>
                                    </select>
                                </td>
                                <td>
                                    <input value="" class="form-control" type="text" name="duration[]" />
                                </td>
                                <td>
                                    <textarea class="form-control" name="description[]"></textarea>
                                </td>
                                <td>
                                    <div class="form-group">
                                        {{ i~'before' }}
                                        {{ form_widget(form.assignee, {'full_name': 'assignee'~i}) }}
                                        {{ i ~'after' }}
                                    </div>
                                </td>
                            </tr>
                        {%  endfor %}
                    </tbody>
                </table>
                </div>

                <div class="error" id="error_contents"></div>
                <input type="hidden" name="id" value="{{ tasktemplate.id }}"/>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary cls" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary create">Create</button>
                <button id="working" class="btn btn-simple hide pull-right">
                    <i class="fa fa-refresh fa-spin fa-3x"></i>
                </button>
            </div>
        </form>
    </div>
</div>