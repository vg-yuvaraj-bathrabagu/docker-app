<div class="card">
    <div class="card-content">
        <div class="table-responsive">
            <table class="table ">
                <thead>
                <tr>
                    <th>Action</th>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Folder</th>
                    <th>Description</th>
                    <th>Code</th>
                    <th>Status</th>
                    <th>Timestamp</th>
                </tr>
                </thead>
                <tbody>
                {% set increment = 0 %}

                {% for filewatcher in filewatchers %}

                    {% set increment = increment + 1 %}
                    <tr>
                        <td>
                            <a class="edit" href="javascript:void(0);" data-location="editfilewatcher?id={{filewatcher.id}}" >
                                <i class="ti-pencil" aria-hidden="true"></i>
                            </a>
                            <a class="view" href="javascript:void(0);" data-location="viewfilewatcher?id={{filewatcher.id}}">
                                <i class="ti-eye" aria-hidden="true"></i>
                            </a>
                            <a href="#{{ filewatcher.id }}-delete" data-target="#{{ filewatcher.id }}-delete" data-toggle="modal" title="Delete File Watcher">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                            <div class="modal fade" tabindex="-1" id="{{ filewatcher.id }}-delete" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close cls" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Delete FileWatcher Confirmation</h4>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete the filewatcher '{{ filewatcher.title }}'?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn delete-filewatcher btn-secondary" data-dismiss="modal" data-location="deletefilewatcher?id={{filewatcher.id}}" data-query="{{ filewatcher.title}}">Yes</button>
                                            <button type="button" class="btn btn-secondary cls" data-dismiss="modal">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="#{{ filewatcher.id }}-run-background" data-target="#{{ filewatcher.id }}-run-background" data-toggle="modal" title="Run in Background">
                                <i class="fa fa-server" aria-hidden="true"></i>
                            </a>
                            <div class="modal fade" tabindex="-1" id="{{ filewatcher.id }}-run-background" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close cls" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Run FileWatcher in Background</h4>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to run the filewatcher '{{ filewatcher.title }}' in the background?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn run-background btn-secondary" data-dismiss="modal" data-location="runfilewatcher?id={{filewatcher.id}}&type=background" data-query="{{ filewatcher.title}}">Yes</button>
                                            <button type="button" class="btn btn-secondary cls" data-dismiss="modal">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a class="run-interactive" href="javascript:void(0);" data-location="runfilewatcher?id={{filewatcher.id}}&type=interactive" data-query="{{ filewatcher.title}}" title="Run Interactively">
                                <i class="ti-control-play" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn-link" data-toggle="modal" href="#{{filewatcher.id}}-title" data-target="#{{filewatcher.id}}-title">
                            {{ filewatcher.title | truncate(tables_long_text_display_characters)}}
                            </a>
                            <div class="modal fade" tabindex="-1" role="dialog" id="{{filewatcher.id}}-title">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">Title</h4>
                                        </div>
                                        <div class="modal-body">
                                            {{ filewatcher.title }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn" data-dismiss="modal">Close</button>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->

                        </td>
                        <td>
                            {{ filewatcher.category }}
                        </td>
                        <td>
                            <a class="btn-link" data-toggle="modal" href="#{{filewatcher.id}}-bucket" data-target="#{{filewatcher.id}}-bucket">
                            {{ filewatcher.bucket | truncate(tables_long_text_display_characters) }}
                            </a>
                            <div class="modal fade" tabindex="-1" role="dialog" id="{{filewatcher.id}}-bucket">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">Folder</h4>
                                        </div>
                                        <div class="modal-body">
                                            {{ filewatcher.bucket }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn" data-dismiss="modal">Close</button>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->

                        </td>
                        <td>
                            <a class="btn-link" data-toggle="modal" href="#{{filewatcher.id}}-description" data-target="#{{filewatcher.id}}-description">
                                {{ filewatcher.description | truncate(tables_long_text_display_characters) }}
                            </a>

                            <div class="modal fade" tabindex="-1" role="dialog" id="{{filewatcher.id}}-description">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">Description</h4>
                                        </div>
                                        <div class="modal-body">
                                            {{ filewatcher.description }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn" data-dismiss="modal">Close</button>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->


                        </td>
                        <td>
                            <a class="btn-link" data-toggle="modal" href="#{{filewatcher.id}}-querystring" data-target="#{{filewatcher.id}}-querystring">
                                {{ filewatcher.querystring | truncate(tables_long_text_display_characters) }}
                            </a>

                            <div class="modal fade" tabindex="-1" role="dialog" id="{{filewatcher.id}}-querystring">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">Code</h4>
                                        </div>
                                        <div class="modal-body">
                                            {{ filewatcher.querystring }}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn" data-dismiss="modal">Close</button>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->

                        </td>
                        <td class="text-nowrap">
                            {% if filewatcher.statusresult is empty %}
                                <span style="color: {{ filewatcher.color }};"><i class="fa fa-circle" aria-hidden="true"></i> </span> {{ filewatcher.status }}
                            {% else  %}
                                <a class="btn-link" data-toggle="modal" href="#{{filewatcher.id}}-statusresult" data-target="#{{filewatcher.id}}-statusresult">
                                    <span style="color: {{ filewatcher.color }};"><i class="fa fa-circle" aria-hidden="true"></i> </span> {{ filewatcher.status }}
                                </a>
                                <div class="modal fade" tabindex="-1" role="dialog" id="{{filewatcher.id}}-statusresult">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title">Status Result</h4>
                                            </div>
                                            <div class="modal-body new-window-link">
                                                <h1>Log File URL</h1> {{ filewatcher.statusresult | markdowntohtml | raw | nl2br }} <br>

                                                {{ filewatcher.statusresult | reads3filecontents | markdowntohtml | raw | nl2br }}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn" data-dismiss="modal">Close</button>
                                            </div>
                                        </div><!-- /.modal-content -->
                                    </div><!-- /.modal-dialog -->
                                </div><!-- /.modal -->
                            {% endif %}
                        </td>
                        <td class="text-nowrap">
                            {{ filewatcher.date|date('Y-m-d  H:i:s') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div><!--  end card  -->
</div>