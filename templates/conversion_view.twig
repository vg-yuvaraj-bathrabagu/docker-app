<div class="form-group">
    <label class="control-label">Name : </label>
    <span class="help-block">{{ conversion.name }}</span>
</div>
<div class="form-group">
    <label class="control-label">Description : </label>
    <span class="help-block">{{ conversion.description }}</span>
</div>
<div class="form-group">
    <label class="control-label">Type : </label>
    <span class="help-block">{{ conversion.type }}</span>
</div>
<div class="form-group">
    <label class="control-label">URL : </label>
    <span class="help-block">{{ conversion.url }}</span>
</div>
<div class="form-group">
    <label class="control-label">Parameters : </label>
    <span class="help-block">{{ conversion.parameters }}</span>
</div>
<div class="form-group">
    <label class="control-label">Status : </label>
    <span class="help-block">
       {%  if conversion.isactive == 0 %}
           <span style="color: red"><i class="fa fa-circle" aria-hidden="true"></i> </span> Inactive
        {%  else  %}
           <span style="color: green"><i class="fa fa-circle" aria-hidden="true"></i> </span> Active
       {%  endif %}
    </span>
</div>

